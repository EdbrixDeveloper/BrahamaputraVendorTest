<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DashboardActivity"
    android:orientation="vertical"
    android:background="#fafafa">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" >

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:gravity = "center"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/toolbar_title" />-->



    </android.support.v7.widget.Toolbar>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#f0f3f8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            android:background="#f0f3f8"
            android:layout_margin="@dimen/app_min_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/dashboard_relativeLayout_myHoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:layout_margin="@dimen/app_normal_margin">

                    <ImageView
                        android:id="@+id/imgHoto"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/tickets_icon"
                        android:layout_gravity="center|top"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My HOTO"
                        android:textColor="@color/red"
                        android:textSize="18dp"
                        android:layout_below="@+id/imgHoto"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/app_min_margin"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dashboard_relativeLayout_myAsset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:layout_margin="@dimen/app_normal_margin">

                    <ImageView
                        android:id="@+id/imgAsset"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/assets_icon"
                        android:layout_gravity="center|top"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Assets"
                        android:textColor="@color/red"
                        android:textSize="18dp"
                        android:layout_gravity="center|bottom"
                        android:layout_below="@+id/imgAsset"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/app_min_margin"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/dashboard_relativeLayout_myMaster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:layout_weight="1"
                    android:background="@color/colorWhite">

                    <ImageView
                        android:id="@+id/imgMasters"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center|top"
                        android:src="@drawable/master_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgMasters"
                        android:layout_gravity="center|bottom"
                        android:layout_marginTop="@dimen/app_min_margin"
                        android:text="My Masters"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="18dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dashboard_relativeLayout_myEnergy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:layout_margin="@dimen/app_normal_margin">

                    <ImageView
                        android:id="@+id/imgEnergy"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/electricity_icon"
                        android:layout_gravity="center|top"
                       android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Energy"
                        android:textColor="@color/red"
                        android:textSize="18dp"
                        android:layout_gravity="center|bottom"
                        android:layout_below="@+id/imgEnergy"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/app_min_margin"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/dashboard_relativeLayout_myPrevitive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:layout_margin="@dimen/app_normal_margin">

                    <ImageView
                        android:id="@+id/imgPrevetive"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/prevetive_icon"
                        android:layout_gravity="center|top"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Prevetive"
                        android:textColor="@color/red"
                        android:textSize="18dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/app_big_margin"
                        android:layout_below="@+id/imgPrevetive"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/app_min_margin"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dashboard_relativeLayout_myIncident"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:layout_margin="@dimen/app_normal_margin">

                    <ImageView
                        android:id="@+id/imgIncident"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/incident_icon"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="@dimen/app_big_margin"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Incident"
                        android:textColor="@color/red"
                        android:textSize="18dp"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/app_big_margin"
                        android:layout_below="@+id/imgIncident"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/app_min_margin"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>