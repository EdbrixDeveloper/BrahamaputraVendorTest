<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EbSiteElectrificationList">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout_temp_ebSiteElectrificationTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="@dimen/app_min_padding"
        android:visibility="gone"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView_ebSiteElectrificationTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_min_margin"
                    android:layout_marginLeft="@dimen/app_normal_margin"
                    android:layout_weight="7.5"
                    android:text="EBSE1100096"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_ebSiteElectrificationTicketDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_normal_margin"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="Date: 23/02/2019" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView_SiteID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:text="Site ID: site 2992" />

            <TextView
                android:id="@+id/textView_SiteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:text="Site Name: SM Site 2992" />

            <TextView
                android:id="@+id/textView_SiteSSA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:text="Site SSA: Jammu" />

            <TextView
                android:id="@+id/textView_SiteAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:layout_weight="1"
                android:text="Site Address: Plot No.213, Whites Road, Royapettah, Jammu " />
        </LinearLayout>


    </LinearLayout>


