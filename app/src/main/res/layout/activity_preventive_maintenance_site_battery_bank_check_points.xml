                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_batteryBankDischargeTestVal1"
                            style="@style/MyTheme"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.4"
                            android:hint="Select"
                            android:textAlignment="viewStart" />

                        <ImageView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_imageview_batteryBankDischargeTest1"
