                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_linearLayout_testDoneAs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_min_padding"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_testDoneAs"
                        style="@style/FontStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Test Done as" />

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_testDoneAsVal"
                        style="@style/MyTheme"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.6"
                        android:hint="Select"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_min_padding"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_selectBatteryBank"
                        style="@style/FontStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Select Battery Bank" />

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_selectBatteryBankVal"
                        style="@style/MyTheme"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.6"
                        android:hint="Select"
                        android:textAlignment="viewStart" />
                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_linearLayout_batteryBankDischargeTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_min_padding"
                    android:visibility="gone"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_batteryBankDischargeTest"
                        style="@style/FontStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Battery Bank Discharge Test" />

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_batteryBankDischargeTestVal"
                        style="@style/MyTheme"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.4"
                        android:hint="Select"
                        android:textAlignment="viewStart" />

                    <ImageView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_imageview_batteryBankDischargeTest"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.2"
                        android:clickable="true"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/book"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_min_padding"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_registerFault"
                        style="@style/FontStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Register Fault" />

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_registerFaultVal"
                        style="@style/MyTheme"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.6"
                        android:hint="Select"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_linearLayout_typeOfFault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_min_padding"
                    android:visibility="gone"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_typeOfFault"
                        style="@style/FontStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Type of Fault" />

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_typeOfFaultVal"
                        style="@style/MyTheme"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.6"
                        android:hint="Select"
                        android:textAlignment="viewStart" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_linearLayout_uploadPhotoOfRegisterFault"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_min_padding"
                    android:visibility="gone"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_uploadPhotoOfRegisterFault"
                        style="@style/FontStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Upload Photo"
                        android:textColor="@color/colorBlueLink" />

                    <ImageView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_button_uploadPhotoOfRegisterFault"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.3"
                        android:clickable="true"
                        android:padding="2dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/baseline_photo_camera_black_18dp" />

                    <ImageView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_button_uploadPhotoOfRegisterFaultView"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.3"
                        android:clickable="true"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/view_image"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/linearLayout_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/app_normal_margin"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_battreyBankNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/app_min_margin"
                        android:text="#1"
                        android:textAlignment="textStart"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="#a40404" />

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/app_min_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_detailsOfBatteryBankQRCodeScan"
