                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="QR Code Scan" />

                        <ImageView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_button_detailsOfBatteryBankQRCodeScan"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            android:padding="2dp"
                            android:scaleType="fitStart"
                            android:src="@drawable/baseline_photo_camera_black_18dp" />

                        <ImageView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_button_detailsOfBatteryBankQRCodeScanView"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/baseline_done_black_18dp"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/button_ClearDetailsOfBatteryBankQRCodeScanView"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_close_black_24dp"
                            android:visibility="gone" />
                        <!--android:src="@drawable/baseline_photo_camera_black_18dp"-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_linearLayout_selectBatteryBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/app_min_padding"
                        android:weightSum="1">
                        <!--android:visibility="gone"-->
                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_selectBatteryBank"
                            style="@style/FontStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Select Battery Bank" />

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_selectBatteryBankVal"
                            style="@style/MyTheme"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.6"
                            android:hint="Select"
                            android:textAlignment="viewStart" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/app_min_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_stripBoltTightnessAsPerTorque"
                            style="@style/FontStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Strip Bolt tightness as per torque" />

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_stripBoltTightnessAsPerTorqueVal"
                            style="@style/MyTheme"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.6"
                            android:hint="Select"
                            android:textAlignment="viewStart" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/app_min_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_petroleumJellyApplied"
                            style="@style/FontStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Petroleum Jelly Applied" />

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_petroleumJellyAppliedVal"
                            style="@style/MyTheme"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.6"
                            android:hint="Select"
                            android:textAlignment="viewStart" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/app_min_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_batteryVentPlugStatus"
                            style="@style/FontStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Battery Vent plug Status" />

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_batteryVentPlugStatusVal"
                            style="@style/MyTheme"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.6"
                            android:hint="Select"
                            android:textAlignment="viewStart" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/app_min_padding"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_bbEarthingStatus"
                            style="@style/FontStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="BB Earthing Status" />

                        <TextView
                            android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_textView_bbEarthingStatusVal"
                            style="@style/MyTheme"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="0.6"
                            android:hint="Select"
                            android:textAlignment="viewStart" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preventiveMaintenanceSiteBatteryBankCheckPoints_linearLayout_batteryBankDischargeTest1"
