<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activities.UserHotoTransactionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/userHotoTrans_button_submitHotoTrans"
        android:layout_marginBottom="@dimen/app_min_margin"
        android:padding="@dimen/app_min_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/app_normal_margin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/app_normal_padding">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer name"
                android:textColor="@color/colorBlueLink"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userHotoTrans_editText_customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:textColor="@color/colorBlueLink"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userHotoTrans_editText_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of circle"
                android:textColor="@color/colorBlueLink"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userHotoTrans_editText_nameOfCircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of SSA"
                android:textColor="@color/colorBlueLink"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userHotoTrans_editText_nameOfssa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of site"
                android:textColor="@color/colorBlueLink"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userHotoTrans_editText_nameOfsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Site ID"
                android:textColor="@color/colorBlueLink"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userHotoTrans_editText_siteID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_normal_margin"
                android:layout_marginTop="@dimen/app_normal_margin"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/userHotoTrans_textView_typeOfTower"
                    style="@style/FontStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:text=" Type of sites"
                    android:textColor="@color/colorBlueLink"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/userHotoTrans_editText_typeOfSite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:ems="10"
                    android:hint=""
                    android:inputType="textPostalAddress"
                    android:lines="3" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Site Address"
                android:textColor="@color/colorBlueLink"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userHotoTrans_editText_siteAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=""
                android:inputType="textPostalAddress"
                android:lines="3"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="232dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_normal_margin"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/app_min_padding"
                android:paddingTop="@dimen/app_min_padding"
                android:weightSum="1">

                <TextView
                    android:id="@+id/userHotoTrans_textView_sourceOfPower"
                    style="@style/FontStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:text="Source of Power"
                    android:textColor="@color/colorBlueLink"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/userHotoTrans_textView_sourceOfPower_val"
                    style="@style/MyTheme"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.5"
                    android:hint="Select"
                    android:textAlignment="viewStart" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/userHotoTrans_button_submitHotoTrans"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/red"
        android:text="Next"
        android:textColor="@color/colorWhite"
        android:textSize="18dp" />

</RelativeLayout>