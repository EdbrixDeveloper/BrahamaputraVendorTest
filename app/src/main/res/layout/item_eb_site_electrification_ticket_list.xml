<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:padding="@dimen/app_min_padding"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView_ebSiteElectrificationTicketNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/app_min_margin"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:layout_weight="7.5"
                android:text="TKT_1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_ebSiteElectrificationTicketDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_normal_margin"
                android:layout_weight="2"
                android:gravity="right"
                android:text="Date: dd/mm/yyyy" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_ebSiteElectrificationSiteID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_normal_margin"
            android:text="Site ID: 1500" />

        <TextView
            android:id="@+id/textView_ebSiteElectrificationSiteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_normal_margin"
            android:text="Site Name: ST_MH_01" />

        <TextView
            android:id="@+id/textView_ebSiteElectrificationSiteSSA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_normal_margin"
            android:text="Site SSA: Mahi_01_AA" />

        <TextView
            android:id="@+id/textView_ebSiteElectrificationSiteAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_normal_margin"
            android:layout_weight="1"
            android:text="Site Address: aa" />
    </LinearLayout>


</LinearLayout>
